<script>

$( "#position1" ).position({
  my: "center",
  at: "center",
  of: "#targetElement"
});
 
$( "#position2" ).position({
  my: "left top",
  at: "left top",
  of: "#targetElement"
});
 


$( document ).mousemove(function( event ) {
  $( "#position4" ).position({
    my: "left+3 bottom-3",
    of: event//,    collision: "fit"
  });
  
  $("#arrow-id").position({
    my: "left center", at:"right center", of:"#position4"
  });



 $( "#note-id" ).position({
   my: "left top",
   at: "right top",
   of: "#arrow-id",    collision: "flipfit", within: "#targetElement"
 });
});
  
  


</script>
 
